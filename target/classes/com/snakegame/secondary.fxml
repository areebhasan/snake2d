<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/[Your_JavaFX_Version]" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snakegame.PrimaryController">
   <children>
      <!-- Wrapping Canvas in AnchorPane for better resizing behavior -->
      <AnchorPane>
         <Canvas fx:id="gameCanvas" width="400" height="400" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" />
      </AnchorPane>

      <!-- Score Label -->
      <Label fx:id="scoreLabel" text="Score: 0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>

