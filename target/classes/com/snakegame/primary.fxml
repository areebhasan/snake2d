<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.layout.CornerRadii?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snakegame.PrimaryController" style="-fx-background-color: linear-gradient(to bottom, #4e4e50, #2b2b2b);">
   <children>
      <!-- Game Title -->
      <Label text="2D Snake Game" style="-fx-text-fill: #e0e0e0; -fx-font-size: 24px; -fx-font-weight: bold;" />
      <Label text="Developed by Areeb Hasan" style="-fx-text-fill: #e0e0e0; -fx-font-size: 14px; -fx-font-style: italic;" />

      <!-- Game Canvas -->
      <StackPane style="-fx-background-color: #222; -fx-padding: 10px; -fx-border-color: #444; -fx-border-radius: 5px; -fx-background-insets: 5px;">
         <Canvas fx:id="gameCanvas" width="400" height="400" />
      </StackPane>

      <!-- Score Label -->
      <Label fx:id="scoreLabel" text="Score: 0" style="-fx-text-fill: #fff; -fx-font-size: 18px; -fx-font-family: 'Arial';" />

      <!-- Restart Game Button-->
      <Button fx:id="restartButton" text="Restart Game" style="-fx-font-size: 14px;" onAction="#handleRestart" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>



